#include <stdio.h>

struct Student
{
    char name[20];
    int age;
    float math, english;
};

int main()
{
    struct Student student1 = {"kim",23,34.4,12.2};
    
    printf("수학점수를 입력하세요.\n");
    scanf("%f",&student1.math);
    printf("영어점수를 입력하세요.\n");
    scanf("%f",&student1.english);
    
    float avg = (student1.english + student1.math) / 2;
    
    printf("학생이름 : %s\n",student1.name);
    printf("나이 : %d\n",student1.age);
    printf("이 학생의 평균은 %f 입니다.",avg);
    
    
    
}
